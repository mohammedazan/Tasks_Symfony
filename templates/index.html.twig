{% extends "base.html.twig" %}

{% block title %}Index{% endblock %}

{% block body %}
    <div class="row my-5">
      <div class="col-md-8 mx-auto">
              <div class="card">
                  <table border="1">
                      <thead>
                          <tr>
                              <th>ID</th>
                              <th>Title</th>
                              <th>Description</th>
                              <th>Action</th>
                          </tr>
                      </thead>
                      <tbody>
                          {% for task in TaskArray %}
                              <tr>
                                  <td>{{ task.id }}</td>
                                  <td>{{ task.titel }}</td>
                                  <td>{{ task.body }}</td>
                                  <th>
                                      <button style="background-color: green; color: white;">Add</button>
                                      <button style="background-color: red; color: white;">Delete</button>
                                      <button style="background-color: orange; color: white;">Edit</button>
                                  </th>
                              </tr>
                          {% endfor %}
                      </tbody>
                  </table>
       </div>
      </div>
    </div>
{% endblock %}

