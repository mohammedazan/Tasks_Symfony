{% extends "base.html.twig" %}

{% block title %}Index{% endblock %}

{% block body %}
    <div class="row my-5">
      <div class="col-md-8 mx-auto">
              <div class="card">
                  <table border="1" >
                      <thead>
                          <tr>
                              <th>ID</th>
                              <th>Title</th>
                              <th>Description</th>
                              <th>Action</th>
                          </tr>
                      </thead>
                      <tbody>
                          {% for task in TaskArray %}
                              <tr>
                                  <td>{{ task.id }}</td>
                                  <td>{{ task.titel }}</td>
                                  <td>{{ task.body }}</td>
                                  <th>
                                    <a class="btn btn-add" href={{ path('tasks_show',{id : task.id })}}>Show</a>
                                    <a class="btn btn-delete" href={{  path('tasks_update', {id : task.id }) }} >Edit</a>
                                    <a class="btn btn-edit" href={{  path('tasks_delete', {id : task.id }) }} >Delete</a>
                                  </th>
                              </tr>
                          {% endfor %}
                      </tbody>
                  </table>
       </div>
      </div>
    </div>
{% endblock %}

